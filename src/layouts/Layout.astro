---
import Menu from '@/components/essentials/menus/Menu.svelte'
import Footer from '@/components/essentials/footers/Footer.svelte'
import MenuBasic from '@/components/MenuBasic.svelte'

export interface Props {
  title: string
}

const props = Astro.props
const title = props.title
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="view-transition" content="same-origin" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/assets/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <title>{title}</title>
  </head>
  <body>
    <MenuBasic client:load />

    <slot />

    <style lang="scss" is:global>
      @use '@/sass/global.scss';
    </style>
  </body>
</html>

<script>
  /* --- Smooth Scroll --- */
  import Lenis from 'lenis'
  import 'lenis/dist/lenis.css'

  const lenis = new Lenis()

  // Use requestAnimationFrame to continuously update the scroll
  const raf = (time) => {
    lenis.raf(time)
    requestAnimationFrame(raf)
  }

  requestAnimationFrame(raf)
</script>
